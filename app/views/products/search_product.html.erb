<p id="notice"><%= notice %></p>

<%= form_with(url: products_get_from_image_path, local: true) do |form| %>

  <div class="field">
    <%= form.label :code %>
    <%= form.file_field :code %>
  </div>
  <br>

  <div class="actions">
    <%= form.submit 'Search' %>
  </div>
<% end %>

<% if @product %>
  <style>
  table {
    border-width: 0;
    border-style: none;
    border-color: #0000ff;
    border-collapse: collapse;
  }
  
  td {
    border-left: solid 10px #000;
    padding: 0; 
    margin: 0; 
    width: 0px; 
    height: 10px; 
  }
  
  td.black { border-color: #000; }
  td.white { border-color: #fff; }

</style>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Code:</strong>
  <%= @product.code %>
</p>

<p>
  <strong>QRCode:</strong>
  <%= raw @qrcode.as_html %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<% end %>
